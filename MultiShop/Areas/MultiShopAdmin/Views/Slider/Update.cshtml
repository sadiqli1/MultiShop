@model Slider
@{
    ViewData["Title"] = "Update";
}

<div class = "main-panel">
    <div class = "content-wrapper">
        <div class = "row">
            <div class = "col-lg-12 grid-margin stretch-card">
                <div class = "card">
                    <div class = "card-body">
                        <form method = "post" enctype = "multipart/form-data">
                            <div>
                            <h2 style = "color:green">Update Slider</h2>
                        </div>
                        <div class = "mt-3">
                            <img style = "width: 250px; height:100px" src = "~/assets/img/slider/@Model.Image" />
                        </div>
                        <div class = "mt-3">
                            <label asp-for = "Photo">Photo:</label><br />
                            <input asp-for = "Photo" class = "form-control"/>
                            <span asp-validation-for = "Photo" class = "text text-danger"></span>
                        </div>
                        <div class = "mt-2">
                            <label asp-for = "Title">Title:</label><br />
                            <input asp-for = "Title" class = "form-control"/>
                            <span asp-validation-for = "Title" class = "text text-danger"></span>
                        </div>
                        <div class = "mt-2">
                            <label asp-for = "SubTitle">SubTitle:</label><br />
                            <input asp-for = "SubTitle" class = "form-control"/>
                            <span asp-validation-for = "SubTitle" class = "text text-danger"></span>
                        </div>
                        <div class = "mt-2">
                            <label asp-for = "ButtonUrl">ButtonUrl:</label><br />
                            <input asp-for = "ButtonUrl" class = "form-control"/>
                            <span asp-validation-for = "ButtonUrl" class = "text text-danger"></span>
                        </div>
                        <div class = "mt-2">
                            <label asp-for = "Order">Order:</label><br />
                            <input asp-for = "Order" class = "form-control"/>
                            <span asp-validation-for = "Order" class = "text text-danger"></span>
                        </div>
                        <div class = "mt-3">
                            <button class = "btn btn-success" style = "color:white" type = "submit">Update</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>