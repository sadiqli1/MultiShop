@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class = "main-panel">
    <div class = "content-wrapper">
        <div class = "row">
            <div class = "col-lg-12 grid-margin stretch-card">
                <div class = "card">
                    <div class = "card-body">
                        <div>
                            <a class = "btn btn-success" style = "color : white" asp-area = "MultiShopAdmin" asp-controller = "slider" asp-action = "create">Create Slider</a>
                        </div>
                        <div class="table-responsive pt-3">
                    <table class="table table-dark">
                      <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                            Image
                          </th>
                          <th>
                            Title
                          </th>
                          <th>
                            Settings
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (Slider slider in Model)
                       {
                           <tr>
                          <td>
                            @slider.Id
                          </td>
                          <td>
                            <img src = "~/adminimages/slider/@slider.Image" />
                          </td>
                          <td>
                            @slider.Title
                          </td>
                          <td class = "d-flex">
                            <div>
                                <a class = "btn btn-warning"><i class = "mdi mdi-border-color"></i></a>
                            </div>
                            <div>
                                <a class = "btn btn-danger"><i class = "mdi mdi-delete"></i></a>
                            </div>
                            <div>
                                <a class = "btn btn-success"><i class = "mdi mdi-details"></i></a>
                            </div>
                          </td>
                        </tr>
                       }
                      </tbody>
                    </table>
                  </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>