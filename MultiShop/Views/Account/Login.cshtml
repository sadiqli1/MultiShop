@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<section  style="background-color: #eee;">
	<div class="container ">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-lg-12 col-xl-11" style = "padding: 50px 0 50px 0">
				<div class="card text-black" style="border-radius: 25px;">
					<div class="card-body p-md-5">
						<div class="row justify-content-center">
							<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
								<div class = "alert alert-danger" asp-validation-summary = "ModelOnly"></div>
									
								<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Register</p>
								<form class="mx-1 mx-md-4" method = "post">

									<div class="d-flex flex-row align-items-center mb-4">
										<i class="fas fa-user fa-lg me-3 fa-fw"></i>
										<div class="form-outline flex-fill mb-0">
											<input asp-for = "Username" id="form3Example1c" class="form-control" />
											<label class="form-label" for="form3Example1c">Username</label><br />
											<span class = "text-behance text-danger" asp-validation-for = "Username"></span>
										</div>
									</div>

									<div class="d-flex flex-row align-items-center mb-4">
										<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
										<div class="form-outline flex-fill mb-0">
											<input asp-for = "Password" id="form3Example4c" class="form-control" />
											<label class="form-label" for="form3Example4c">Password</label><br />
											<span class = "text-behance text-danger" asp-validation-for = "Password"></span>
										</div>
									</div>

									<div class="form-check d-flex justify-content-center mb-5">
										<input class="form-check-input me-2" asp-for = "RememberMe"  />
										<label class="form-check-label" asp-for = "RememberMe">Remember Me</label><br />
											<span class = "text-behance text-danger" asp-validation-for = "RememberMe"></span>
									</div>

									<div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
										<button type="submit" class="btn btn-primary btn-lg">Register</button>
									</div>

								</form>

							</div>
							<div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

								<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
									 class="img-fluid" alt="Sample image">

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>